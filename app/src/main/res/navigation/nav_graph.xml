<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    android:label="@string/app_name"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.imasha.locationserver.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_add_location"
            app:destination="@id/AddLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddLocationFragment"
        android:name="com.imasha.locationserver.AddLocationFragment"
        android:label="@string/add_location_fragment_label"
        tools:layout="@layout/fragment_add_location">

        <action
            android:id="@+id/action_add_location_to_home"
            app:destination="@id/HomeFragment" />
    </fragment>
</navigation>